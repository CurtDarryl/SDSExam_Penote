@model SDSExam_Penote.Models.RecyclableType

@{
    ViewBag.Title = "Delete Recyclable Type";
}

<h2>Delete Recyclable Type</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Type</dt>
        <dd>@Model.Type</dd>

        <dt>Rate</dt>
        <dd>@Model.Rate</dd>

        <dt>MinKg</dt>
        <dd>@Model.MinKg</dd>

        <dt>MaxKg</dt>
        <dd>@Model.MaxKg</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>